        <th class="table-text">Platform</th>
        <th class="table-text">Client IP</th>
      </tr>
    </thead>
    <tbody>
    <% @link.stats.each_with_index do|stat,index| %>
      <tr>
      	<td><%= index + 1 %></td>
        <td><%= @link.original_url %></td>
        <td><%= "#{base_url(@link.short_url)}" %></td>
        <td><%= stat.platform %></td>
        <td><%= stat.ip_address %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

